{
  "variables": {
    "build":                "{{timestamp}}",
    "os_version":           "Windows2019",
    "pre":                  "SICFactory",
    "source_name_filter":   "Windows_Server-2019-English-Full-Base-*",
    "owners":               "amazon",
    "instance_type":        "t2.medium",

    "aws_access_key":       "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key":       "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "region":               "{{env `AWS_DEFAULT_REGION`}}",
    "name":                 "{{user `pre`}}-{{user `os_version`}}-{{user `build`}}",
    "description":          "{{user `pre`}}-{{user `os_version`}}-{{user `build`}} built from latest Market place image"
  },

  "builders": [
   {
    "type":                     "amazon-ebs",
    "access_key":               "{{user `aws_access_key`}}",
    "secret_key":               "{{user `aws_secret_key`}}",
    "region":                   "{{user `region`}}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type":  "hvm",
        "name":                 "Windows_Server-2019-English-Full-Base-*",
        "root-device-type":     "ebs"
      },
      "owners": [
        "{{user `owners`}}"
        ],
      "most_recent":            true
    },
    "instance_type":            "{{user `instance_type`}}",
    "ami_name":                 "{{user `name`}}",
    "tags": {
      "Name":                   "{{ user `name` }}",
      "Description":            "{{ user `description` }}",
      "OS_Version":             "{{ user `os_version` }}",
      "Base_AMI_Name":          "{{ .SourceAMIName }}"
    },
    "force_deregister":         "true",
    "force_delete_snapshot":    "true",
    "user_data_file":           "./bootstrap_win.txt",
    "communicator":             "winrm",
    "winrm_username":           "Administrator",
    "winrm_password":           "SuperS3cr3t!"
   }
  ],

	"provisioners": [
    {
      "type": "powershell",
      "environment_vars": ["DEVOPS_LIFE_IMPROVER=PACKER"],
      "inline": [
        "Write-Host \"HELLO NEW USER; WELCOME TO $Env:DEVOPS_LIFE_IMPROVER\"",
        "Write-Host \"or in your own scripts.\""
      ]
    },
    {
      "type": "powershell",
      "inline": [
        "C:/ProgramData/Amazon/EC2-Windows/Launch/Scripts/InitializeInstance.ps1 -Schedule",
        "C:/ProgramData/Amazon/EC2-Windows/Launch/Scripts/SysprepInstance.ps1 -NoShutdown"
      ]
  }
  ],  
	"post-processors": [
		{
		  "type": "manifest",
		  "output": "manifest.json",
      "strip_path": true,
      "custom_data": {
        "name":                   "{{ user `name` }}",
        "Base_AMI_Name":          "{{ .SourceAMIName }}",
        "type":                     "amazon-ebs",
        "region":                   "{{user `region`}}",
        "owners":                   "{{user `owners`}}",
        "instance_type":            "{{user `instance_type`}}",
        "ami_name":                 "{{user `name`}}",
        "communicator":             "winrm",
        "artifatt":                 "{{ .artifact_id }}",
        "OS_version":               "{{ user `os_version` }}",
        "name_os":                  "{{ user `pre` }}-{{ user `os_version` }}"
      }
		  }
	  ]
 }
