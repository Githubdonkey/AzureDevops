        uri: "http://archive.ubuntu.com/ubuntu/"
  ssh:
    install-server: yes
    allow-pw: yes
  identity:
    hostname: ubuntu-00
    password: '$6$HkmrpF5f1UDuYY4V$22zkw5IR670MJKBcBuHGuorvCjEKZNmtB4G7J5r/axoIv9Tb/1r4yawDXDsU6k9Lrn2m/W5KDBJoDpee5Turt0'
    username: ubuntu # root doesn't work
  packages:
